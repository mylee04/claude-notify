{
  "_comment": "Example settings.json - The installer will create proper paths for your system",
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "_description": "Triggers when Claude needs user input (idle for 60+ seconds)",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.code-notify/lib/code-notify/core/notifier.sh notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "_description": "Triggers when tasks complete",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.code-notify/lib/code-notify/core/notifier.sh stop"
          }
        ]
      }
    ]
  }
}
